@model bandienthoai.Models.EF.CONTACT
<style>
    #map {
        width: 100%;
        height: 600px;
    }
</style>
@section js{
@*<script src="~/Assets/client/controller/ContacController.js"></script>*@
    <script>
        var contact = {
            init: function () {
                contact.regEvents();
            },
            regEvents: function () {
                $('#btnSend').off('click').on('click', function () {
                    var name = $("#txtName").val();
                    var sdt = $("#txtSdt").val();
                    var email = $("#txtEmail").val();
                    var address = $("#txtAddress").val();
                    var title = $("#txtTitle").val();
                    var content = $("#txtContent").val();

              
                $.ajax({
                    url: "Contact/Send",
                    type: "POST",
                    dataType: "json",
                    data: {
                        name: name,
                        sdt: sdt,
                        address: address,
                        email: email,
                        title: title,
                        content: content,
                    },
                    success: function (res) {
                        if (res.status == true) {
                            alert("Gửi thành công!");
                        }
                    }
                    });
                });
            }
        }
        contact.init();
    </script>
    <script src="https://maps.googleapis.com/maps/api/js">
    </script>
    <script>

        // This example displays a marker at the center of Australia.
        // When the user clicks the marker, an info window opens.

        function initMap() {
            var toado = { lat: -25.363, lng: 131.044 };
            var map = new google.maps.Map($('#myMap'), {
                zoom: 4,
                center: toado
            });

            var contentString = '@Html.Raw(Model.CONTENT)';

            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            var marker = new google.maps.Marker({
                position: toado,
                map: map,
                title: 'Địa chỉ'
            });
            marker.addListener('click', function () {
                infowindow.open(map, marker);
            });
        }
        google.maps.event.addDomListener(window, 'load', initMap);
    </script>

}
@{



    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-12 col-md-6">
            <h2>Thông tin liên hệ</h2>
            @Html.Raw(Model.CONTENT);
            
        </div>
        <div class="col-12 col-md-6">
           
            <h2>Gửi thông tin</h2>
            <form>
                <table class="table">
                    <tbody>
                        <tr>
                            <td>
                                <span>Họ tên</span>
                                <span class="required">*</span>
                            </td>
                            <td><input type="text" id="txtName" class="form-group" /></td>
                        </tr>
                        <tr>
                            <td>
                                <span>SĐT</span>
                                <span class="required">*</span>
                            </td>
                            <td><input type="text" id="txtSdt" class="form-group" /></td>
                        </tr>
                        <tr>
                            <td>
                                <span>Email</span>
                                <span class="required">*</span>
                            </td>
                            <td><input type="text" id="txtEmail" class="form-group" /></td>
                        </tr>
                        <tr>
                            <td>
                                <span>Địa chỉ</span>

                            </td>
                            <td><input type="text" id="txtAddress" class="form-group" /></td>
                        </tr>
                        <tr>
                            <td>
                                <span>Tiêu đề</span>
                                <span class="required">*</span>
                            </td>
                            <td><input type="text" id="txtTitle" class="form-group" /></td>
                        </tr>
                        <tr>
                            <td>
                                <span>Nội dung</span>

                            </td>
                            <td>
                                <textarea name="txtContent" id="txtContent" class="form-control" style="width:100%;" rows="6"></textarea>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button type="submit"id="btnSend">Gửi</button>
            </form>
        </div>
        <div class="col-12">
            <h2> Bản đồ</h2>
            <div class="map" id="myMap"></div>
        </div>
    </div>
</div>

