        //change duyet
        function changeDuyet(url) {
            $("#customer_data tbody input[class='record']").each(function () {
                if ($(this) != null) {

                    if ($(this).is(":checked")) {

                        var x = this.value;
                        $.ajax({
                            url: url + x,
                            dataType: "json",
                            type: "POST",
                            success: function (response) {

                                if (response == 5) {
                                    $("#hd_" + x).html("<i class='fas fa-credit-card'></i> Đang giao");

