    @* Get detail *@
    <script>
        function DataBind(TkList) {
            var total = 0;
            $("#setTkList").empty();
            var setData = $("#setTkList");
            for (var i = 0; i < TkList.length; i++) {
                total += (TkList[i].Price * TkList[i].Quantity) - ((TkList[i].Price * TkList[i].Quantity) * TkList[i].Promotion / 100);
                var data = "<tr id='" + TkList[i].Id + "'>" +

                   
                    "<td data-id='" + TkList[i].Name + "'>" + TkList[i].Name+ "</td>" +
                    "<td data-id='" + TkList[i].NameTypeProduct + "'>" + TkList[i].NameTypeProduct + "</td>" +
                    "<td data-id='" + TkList[i].IdNCC + "'>" + TkList[i].NameNCC + "</td>" +
                    "<td data-id='" + TkList[i].SoLuong + "'>" + TkList[i].SoLuong + "</td>" +
                   
                    "<td> <input class='quality form-control' type='number'/></td>" +
                  
                    "<td> <input class='Price form-control' type='number' /></td>" +
                   
                    
                   
                    
                    "</tr>";
                setData.append(data);

            }

            $("#TotalPrice").text(+total + " VNĐ");
        }
        function DetailOrder(id, name, sdt, email, addres) {
            $("#infoName").text(name);
            $("#infoID").text(id);
            $("#infoSdt").text(sdt);
            $("#infoEmail").text(email);
            $("#infoDiaChi").text(addres);

            $.ajax({
                url: 'DetailOrder',
                data: { id: id },
                dataType: 'json',
                type: 'POST',
                success: function (res) {

                    $("#ModalTitle").text("Thông tin sản phẩm");

                    DataBind(res);

                    $("#DetailOrder").modal("show");


                }
            });
        }
    </script>
    <script>
        
        var cart = {
            init: function () {
                cart.regEvents();
            },
            regEvents: function () {
              
                $('#btninsert').off('click').on('click', function () {
                    var table, tr, td1, td2, td3,td4, i;
                    var list = [];
                    table = document.getElementById("Bill_Nhap");

                    tr = table.getElementsByTagName("tr");
                    for (i = 1; i < tr.length; i++) {
                        td1 = tr[i].getAttribute("id");
                      
                        td2 = tr[i].getElementsByClassName("quality")[0].value;
                        td3 = tr[i].getElementsByTagName("td")[2].getAttribute("data-id");
                        td4 = tr[i].getElementsByClassName("Price")[0].value;
                        list.push({
                            Id: td1,
                            SoLuong: td2,
                            IdNCC: td3,
                            Price:td4,
                        });
                    }
                    $.ajax({
                        url: '/Nhaphang/InsertBill',
                        data: { list: JSON.stringify(list) },
                        dataType: 'json',
                        type: 'POST',
                        success: function (res) {
                            if (res.status == true) {
                                listnhap = res.list;
                                alert("Thành công!");

                             

                                

                            }
                        },
                    });
                });



            }
        }
        cart.init();

    </script>
    <script>
        $("#btnThanhToan").click(function () {
            changeThanhToan("ThanhToan?id=");
        });
        $("#btnChuaThanhToan").click(function () {
            changeThanhToan("ChuaThanhToan?id=");
        });

        function changeThanhToan(url) {
            $("#customer_data tbody input[class='record']").each(function () {
                if ($(this) != null) {

                    if ($(this).is(":checked")) {

                        var x = this.value;
                        $.ajax({
                            url: url + x,
                            dataType: "json",
                            type: "POST",
                            success: function (response) {

                                if (response == true) {
                                    $("#tt_" + x).text("Đã thanh toán");

                                }


                                else {
                                    $("#tt_" + x).text("Chưa thanh toán");
                                }
                            }
                        });


                    }

                    $(this).prop("checked", false);
                }
                $("#checkall").prop("checked", false);

            });

        }
    </script>
