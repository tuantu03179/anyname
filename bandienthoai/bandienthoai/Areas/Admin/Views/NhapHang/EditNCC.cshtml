@model bandienthoai.Areas.Admin.Models.EF.NHACUNGCAP

@{
    ViewBag.Title = "EditNCC";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header{
    <h2 class="no-margin-bottom">Chỉnh sửa nhà cung cấp</h2>
    <div class="page-button ml-auto">
        <a href="/Admin/NhapHang/QLNhaCungCap"><button id="btn-back" type="button" class="btn btn-default"><i class="fas fa-arrow-left"></i> Trở Về</button></a>
        <a href="#" data-toggle="modal"><button id="btn-add" type="button" class="btn btn-default"><i class="fas fa-plus"></i> Tạo Mới</a></button></a>

    </div>
}

@using (Html.BeginForm("EditNCC", "NhapHang", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_NCC)

        <div class="form-group">
            <label class="col-md-2" for="exampleInputEmail1">Mã nhà cung cấp</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MANCC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MANCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2" for="exampleInputEmail1">Tên nhà cung cấp</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TEN_NCC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TEN_NCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2" for="exampleInputEmail1">Địa chỉ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIACHI_NCC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIACHI_NCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2" for="exampleInputEmail1">Địa chỉ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.EMAIL_NCC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EMAIL_NCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2" for="exampleInputEmail1">Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDT_NCC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDT_NCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2" for="exampleInputEmail1">Số điện thoại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.IS_DELETE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IS_DELETE, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <label class="col-md-2" for="exampleInputEmail1">Người chỉnh sửa</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MODIFILEDBY, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MODIFILEDBY, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2" for="exampleInputEmail1">Ngày chỉnh sửa</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MODIFILEDDATE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MODIFILEDDATE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}


